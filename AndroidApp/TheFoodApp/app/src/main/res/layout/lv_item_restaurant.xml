<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_vertical"
    android:id="@+id/userLayout"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/FramePhoto">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivRestaurantPhoto"
            android:background="@drawable/food"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stencil"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="The True Normand"
            android:id="@+id/tvRestaurantName"/>

        <TextView
            android:layout_width="match_parent"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:text="1600 Amphitheatre Pkwy, Mountain View, CA"
            android:id="@+id/tvRestaurantAddress"/>

    </LinearLayout>

    <Button
        android:id="@+id/btRestaurantReview"
        android:textColor="@color/accent"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:text="4.5"
        android:background="@color/white"
     />
</LinearLayout>