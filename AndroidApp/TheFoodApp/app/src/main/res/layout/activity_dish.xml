<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivMenuItem"
            android:background="@drawable/food"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avocado Mexican Dipping Sauce"
        android:id="@+id/tvMenuItemDescription"
        android:textSize="20dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
    />

    <LinearLayout
        android:id="@+id/ratingDisplayBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/dishRatingBarIcon"
            android:src="@drawable/good"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="5.5"
            android:id="@+id/tvDishRating"
            android:padding="8dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/flDishPosts"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal|top"
            android:indeterminate="true" />
    </FrameLayout>


</LinearLayout>
